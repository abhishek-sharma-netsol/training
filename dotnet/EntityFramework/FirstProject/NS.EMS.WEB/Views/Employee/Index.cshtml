@model List<NS.EMS.Model.EmployeeDeptModel>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">FirstName</th>
        <th scope="col">LastName</th>
        <th scope="col">Age</th>
        <th scope="col">Dept</th>
      </tr>
    </thead>
    <tbody>
      @foreach( var item in Model)
      {
      <tr>
        <th scope="row">@item.Id</th>
        <td>@item.FirstName</td>
        <td>@item.LastName</td>
        <td>@item.Age</td>
        <td>@item.DeptName</td>
        <td>
          <a asp-controller="Controller" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
        </td>
      </tr>
      }
    </tbody>
  </table>
  <br>
  @Html.ActionLink("Create", "Create")
