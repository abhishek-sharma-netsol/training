@model Employee

<div class="container">
  <h3 class="display-4">Add New Employee</h3>
  <form asp-action="AddNewEmployee" asp-controller="Employee" method="post">
    <div class="form-group">
      <label asp-for="Id"></label>
      <input asp-for="Id" class=" form-control">
    </div>
    <div class="form-group">
      <label asp-for="EmployeeName"></label>
      <input asp-for="EmployeeName" class=" form-control">
    </div>
    <div class="form-group">
      <label asp-for="EmployeeAge"></label>
      <input asp-for="EmployeeAge" class=" form-control">
    </div>
    <div class="form-group">
      @Html.DropDownListFor(m => m.EmployeeGender,
      new SelectList(Enum.GetValues(typeof(Gender))), "Select Gender")
    </div>
  </form>
</div>
