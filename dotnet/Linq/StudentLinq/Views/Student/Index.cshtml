@model IEnumerable<StudentLinq.Models.Student>
  <div class="containers w-25 p-3">
    <h3> All Student</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Name</th>
        </tr>
      </thead>
      <tbody>
        @foreach( var std in Model)
        {
        <tr>
          <th scope="row">
            <a asp-controller="Student" asp-action="Details" asp-route-id="@std.Id">@std.Id</a>
          </th>
          <td>@std.Name</td>
        </tr>
        }
      </tbody>
    </table>
  </div>
